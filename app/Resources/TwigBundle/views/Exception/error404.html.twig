{# app/Resources/TwigBundle/views/Exception/error404.html.twig #}
{% extends 'AppBundle::layout.html.twig' %}

{% block title %}
    {{ '404.title'|trans }} | {{ 'default.title'|trans }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("bundles/app/css/notFound.css") }}">
{% endblock %}

{% block body %}
    <div id="page">
        <section class="inner">
            <h1>{{ '404.title'|trans|upper }}</h1>
            <span class="separator"></span>
			<span class="error">
				<span>4</span>
				<span>0</span>
				<span>4</span>
			</span>
            <div class="link-button s160x40">
                <a href="{{ path('index') }}"><span>{{ '404.homepage_link'|trans }}</span></a>
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}{% endblock %}